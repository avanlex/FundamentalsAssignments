<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_cover_height"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            android:background="@drawable/poster"
            android:contentDescription="@string/movie_cover"
            android:src="@drawable/gradient_transpartent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_cover_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_cover_height"
            android:contentDescription="@string/movie_cover_gradient"
            android:src="@drawable/gradient_transpartent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/movie_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_back_height"
                android:layout_marginTop="@dimen/size_back_margin_top"
                android:alpha="0.25"
                android:drawablePadding="@dimen/back_image_padding"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/back_padding_start"
                android:text="@string/string_back"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_back" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_name_layout_height"
                android:layout_marginTop="@dimen/movie_name_layout_margin_top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_pg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_pg13"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_pg_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="0.9"
                    android:text="@string/string_avengers_end_game"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_movie_name"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_tags"
                android:textColor="@color/text_red"
                android:textSize="@dimen/size_tagline" />


            <LinearLayout
                android:id="@+id/reviews"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include layout="@layout/rating_bar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8.9dp"
                    android:text="@string/string_reviews"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/storyline_layout"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_storyline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_storyline"
                    android:textColor="@color/color_white1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.75"
                    android:letterSpacing="0.08"
                    android:text="@string/string_storyline_content"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="7dp"
                android:text="@string/string_cast"
                android:textColor="@color/color_white1"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_actor1"
            style="@style/actor_card"
            android:text="@string/string_robert_downey_jr"
            app:drawableTopCompat="@drawable/actor_downey"
            app:layout_constraintEnd_toStartOf="@+id/text_actor2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details" />

        <TextView
            android:id="@+id/text_actor2"
            style="@style/actor_card"
            android:text="@string/string_chris_evans"
            app:drawableTopCompat="@drawable/actor_evans"
            app:layout_constraintEnd_toStartOf="@+id/text_actor3"
            app:layout_constraintStart_toEndOf="@+id/text_actor1"
            app:layout_constraintTop_toBottomOf="@+id/movie_details"/>

        <TextView
            android:id="@+id/text_actor3"
            style="@style/actor_card"
            android:text="@string/string_mark_ruffalo"
            app:drawableTopCompat="@drawable/actor_ruffalo"
            app:layout_constraintEnd_toStartOf="@+id/text_actor4"
            app:layout_constraintStart_toEndOf="@+id/text_actor2"
            app:layout_constraintTop_toBottomOf="@+id/movie_details"/>

        <TextView
            android:id="@+id/text_actor4"
            style="@style/actor_card"
            android:text="@string/string_chris_hemsworth"
            app:drawableTopCompat="@drawable/actor_hemsworth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_actor3"
            app:layout_constraintTop_toBottomOf="@+id/movie_details"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


