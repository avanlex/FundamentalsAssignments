    <LinearLayout
        android:id="@+id/linear_actor2"
        android:layout_width="80dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linear_actor3"
        app:layout_constraintStart_toEndOf="@+id/text_actor1"
        app:layout_constraintTop_toBottomOf="@+id/movie_details">

        <ImageView
            android:id="@+id/image_actor2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/actor_evans"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/text_evans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="@string/string_chris_evans"
            android:textColor="#ECECEC " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_actor3"
        android:layout_width="80dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linear_actor4"
        app:layout_constraintStart_toEndOf="@+id/linear_actor2"
        app:layout_constraintTop_toBottomOf="@+id/movie_details">

        <ImageView
            android:id="@+id/image_actor3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/actor_ruffalo"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/text_ruffalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="@string/string_mark_ruffalo"
            android:textColor="#ECECEC " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_actor4"
        android:layout_width="80dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linear_actor3"
        app:layout_constraintTop_toBottomOf="@+id/movie_details">

        <ImageView
            android:id="@+id/image_actor4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/actor_hemsworth"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/text_hemsworth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="@string/string_chris_hemsworth"
            android:textColor="#ECECEC " />
    </LinearLayout>

