<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <size android:width="10dp"/>
            <!--    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>-->
            <gradient
                android:startColor="#636375"
                android:endColor="#3B3B4D"
                android:centerX="0.1"
                android:centerY="0.1"
                android:angle="315"
                android:type="linear"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/item_movie_border_width"
        android:left="@dimen/item_movie_border_width"
        android:right="@dimen/item_movie_border_width"
        android:top="@dimen/item_movie_border_width">
        <shape>
            <size android:width="10dp"/>
            <gradient
                android:startColor="#404056"
                android:endColor="#222232"
                android:centerX="0.1"
                android:centerY="0.1"
                android:gradientRadius="600"
                android:type="radial"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>