<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded_ImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_actor_corner_size</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent"
    parent="">
    <!--
    Sets size of corners to be 50% of min(width, height) of widget
    -->
    <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.ShapeableImageView"
    parent="Widget.MaterialComponents.ShapeableImageView">
    <item name="shapeAppearance">
    ?attr/shapeAppearanceSmallComponent
    </item>
    <item name="shapeAppearanceOverlay">
        @style/ShapeAppearanceOverlay.App.CornerSize50Percent
    </item>
    <item name="strokeWidth">1dp</item>
    <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="actor_card">
        <item name="android:layout_width">@dimen/size_actor</item>
        <item name="android:layout_height">@dimen/size_actor_height</item>
        <item name="android:drawablePadding">@dimen/actor_text_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_white1</item>
    </style>
</resources>